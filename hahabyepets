-- Suspense Loading Screen with Fake System Messages
-- Paste into: StarterPlayer > StarterPlayerScripts (LocalScript)

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local Lighting = game:GetService("Lighting")
local player = Players.LocalPlayer

-- Blur
local blur = Instance.new("BlurEffect")
blur.Size = 22
blur.Parent = Lighting

-- GUI
local gui = Instance.new("ScreenGui")
gui.Name = "SystemLoadingGui"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

-- Background
local bg = Instance.new("Frame")
bg.Size = UDim2.new(1,0,1,0)
bg.BackgroundColor3 = Color3.fromRGB(8,8,8)
bg.Parent = gui

-- Title
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1,0,0.12,0)
title.Position = UDim2.new(0,0,0.25,0)
title.BackgroundTransparency = 1
title.Text = "INITIALIZING EXPERIENCE"
title.Font = Enum.Font.GothamBold
title.TextScaled = true
title.TextColor3 = Color3.fromRGB(255,255,255)
title.Parent = bg

-- Status Message
local status = Instance.new("TextLabel")
status.Size = UDim2.new(1,0,0.08,0)
status.Position = UDim2.new(0,0,0.38,0)
status.BackgroundTransparency = 1
status.Text = "Starting services..."
status.Font = Enum.Font.Code
status.TextScaled = true
status.TextColor3 = Color3.fromRGB(150,150,150)
status.Parent = bg

-- Percent
local percentText = Instance.new("TextLabel")
percentText.Size = UDim2.new(1,0,0.08,0)
percentText.Position = UDim2.new(0,0,0.46,0)
percentText.BackgroundTransparency = 1
percentText.Text = "0.0%"
percentText.Font = Enum.Font.Gotham
percentText.TextScaled = true
percentText.TextColor3 = Color3.fromRGB(200,200,200)
percentText.Parent = bg

-- Bar BG
local barBG = Instance.new("Frame")
barBG.Size = UDim2.new(0.45,0,0.025,0)
barBG.Position = UDim2.new(0.275,0,0.56,0)
barBG.BackgroundColor3 = Color3.fromRGB(30,30,30)
barBG.BorderSizePixel = 0
barBG.Parent = bg

-- Bar
local bar = Instance.new("Frame")
bar.Size = UDim2.new(0,0,1,0)
bar.BackgroundColor3 = Color3.fromRGB(255,255,255)
bar.BorderSizePixel = 0
bar.Parent = barBG

Instance.new("UICorner", barBG).CornerRadius = UDim.new(1,0)
Instance.new("UICorner", bar).CornerRadius = UDim.new(1,0)

-- Fake System Messages
local messages = {
	"Starting Roblox services...",
	"Loading replicated assets...",
	"Syncing player data...",
	"Optimizing textures...",
	"Finalizing environment...",
	"Applying performance patches...",
	"Almost ready..."
}

-- Loading Animation
local msgIndex = 1

for i = 1, 998 do
	local percent = i / 10
	bar.Size = UDim2.new(percent/100,0,1,0)
	percentText.Text = string.format("%.1f%%", percent)

	if i % 120 == 0 and msgIndex <= #messages then
		status.Text = messages[msgIndex]
		msgIndex += 1
	end

	task.wait(0.01)
end

-- STUCK AT 99.8%
percentText.Text = "99.8%"
status.Text = "Final checks in progress..."
bar.Size = UDim2.new(0.998,0,1,0)

task.wait(3) -- suspense (safe)

-- Finish
percentText.Text = "100%"
status.Text = "Complete."

if not game:IsLoaded() then
	game.Loaded:Wait()
end

-- Fade Out
local tween = TweenInfo.new(1)
TweenService:Create(bg, tween, {BackgroundTransparency = 1}):Play()
TweenService:Create(title, tween, {TextTransparency = 1}):Play()
TweenService:Create(status, tween, {TextTransparency = 1}):Play()
TweenService:Create(percentText, tween, {TextTransparency = 1}):Play()
TweenService:Create(barBG, tween, {BackgroundTransparency = 1}):Play()
TweenService:Create(bar, tween, {BackgroundTransparency = 1}):Play()
TweenService:Create(blur, tween, {Size = 0}):Play()

task.wait(1)
gui:Destroy()
blur:Destroy()
